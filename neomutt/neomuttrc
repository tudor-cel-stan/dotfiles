# Macros

bind index,pager g noop
macro index gd "<change-folder>$postponed<enter>" "go to drafts"
macro index gs "<change-folder>$record<enter>" "go to sent"
macro index gi "<change-folder>$spoolfile<Enter>" "go to inbox"
macro index gt "<change-folder>$trash<enter>" "go to trash"
macro pager \cb <pipe-entry>'urlview'<enter> 'Follow links with urlview'
macro attach D <save-entry><kill-line>/home/tudorcelstan/Downloads/

## Shortcuts

macro index,pager <f2> '<sync-mailbox><enter-command>source ~/.config/neomutt/tudorcelstan<enter><change-folder>!<enter>'
macro index,pager <f3> '<sync-mailbox><enter-command>source ~/.config/neomutt/tudorstanro<enter><change-folder>!<enter>'
macro index 'c' '<change-folder>?<change-dir><home>^K=<enter>'

# movement ------------------------------------------------------------
bind generic,index,pager    J   next-entry
bind generic,index,pager    K   previous-entry
bind generic,index          j   next-entry
bind generic,index          k   previous-entry
bind pager                  j   next-line
bind pager                  k   previous-line
bind generic,index,pager    J   next-entry
bind generic,index,pager    K   previous-entry
bind pager                  gg  top
bind pager                  G   bottom
bind index                  gg  first-entry
bind index                  G   last-entry
bind index                  l   display-message

